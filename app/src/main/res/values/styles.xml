<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#532</item>
        <item name="colorPrimaryDark">#421</item>
        <item name="colorAccent">#987</item>
    </style>

    <style name="header">
        <item name="android:textStyle">italic</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="content">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="name_text">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="quantity">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="quantity_buttons">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#643</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="checkbox1">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="checkbox2">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="price_currency">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="price">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="buy_button">
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#643</item>
    </style>
</resources>